
<div class="container">
  <div class="row">
    <h1>Voici l'appartement: <b><%=@flat.title%></b>  </h1>
  </div>
  <div class="row">
    <div
      id="map"
      style="width: 100%;
      height: 250px;"
      data-markers="<%= @markers.to_json %>">
    </div>
  </div>
  <div class="row">
    <h5> Ses caracteristiques sont : </h5>
    <ul>
      <li> Description :<%= @flat.description%></li>
      <li> Addresse : <%= @flat.address %></li>
      <li> Prix : <%= @flat.price %></li>
      <li> Capacité :<%= @flat.capacity%></li>
      <li> Date de début : <%= @flat.start_date %></li>
      <li> Date de fin : <%= @flat.end_date%></li>
      <li> Propriétaire : <%= @flat.owner.email%></li>
    </ul>
  </div>
  <div class = "row">
    <div class="col-xs-12 text-center">
      <!-- class qui fait un text-align center de bootstrap -->
      <div class="flat-buttons">
        <% if policy(@flat).update? %>
          <%= link_to 'Edit', edit_flat_path(@flat), class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Reservation", new_flat_reservation_path(@flat), class: "btn btn-primary"%>
        <% end %>
        <% if policy(@flat).destroy? %>
          <%= link_to 'Delete', @flat, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 text-center">
      <%= link_to "Back to index", flats_path, class: "btn btn-primary"%>
    </div>
  </div>
</div>

