
<div class= "container1">
<h1>Voici l'appartement: <b> <%=@flat.title%></b>  </h1>
  <div
    id="map"
    style="width: 100%;
    height: 250px;"
    data-markers="<%= @markers.to_json %>">
  </div>
  <h5> Ses caracteristiques sont : </h5>
  <ul>
    <li> Description :<%= @flat.description%></li>
    <li> Addresse : <%= @flat.address %></li>
    <li> Prix : <%= @flat.price %></li>
    <li> Capacité :<%= @flat.capacity%></li>
    <li> Date de début : <%= @flat.start_date %></li>
    <li> Date de fin : <%= @flat.end_date%></li>
    <li> Propriétaire : <%= @flat.owner.email%></li>
  </ul>
<div class="container2">
  <div class = "row">
    <div class="col-xs-12 text-center">
      <!-- class qui fait un text-align center de bootstrap -->
      <div class="flat-buttons">
      <button type="button" class="btn btn-outline-primary"><%= link_to("Edit information", edit_flat_path )%>
      </button>

      <button type="button" class="btn btn-outline-primary"><%= link_to("Delete flat", flat_path(@flat), method: :delete)%>
      </button>
      <button type="button" class="btn btn-outline-primary"><%= link_to("Reservation", new_flat_reservation_path(@flat))%>
      </button>
      <button type="button" class="btn btn-outline-primary"><%= link_to("Back to index", flats_path)%>
      </button>
    </div>
    </div>
  </div>
</div>
</div>

