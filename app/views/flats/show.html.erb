
<h1>Voici l'appartement : <b> <%=@flat.title%></b>  </h1>
<div
  id="map"
  style="width: 100%;
  height: 250px;"
  data-markers="<%= @markers.to_json %>">
</div>

<h5> Ses caracterstiques sont : </h5>
<ul>
<li> Description :<%= @flat.description%></li>
<li> Addresse : <%= @flat.address %>
<li> Prix : <%= @flat.price %></li>
<li> Capacité :<%= @flat.capacity%></li>
<li> Date de début : <%= @flat.start_date %></li>
<li> Date de fin : <%= @flat.end_date%></li>
<li> Propriétaire : <%= @flat.owner.email%></li>
<%= cl_image_tag(@flat.photo,
      width: 400, height: 300, crop: :fill) %>
</ul>


<td>
  <% if policy(@flat).update? %>
    <%= link_to 'Edit', edit_flat_path(@flat) %>
  <% else %>
    <%= link_to("Reservation", new_flat_reservation_path(@flat))%>
  <% end %>
</td>


<td>
  <% if policy(@flat).destroy? %>
    <%= link_to 'Delete', @flat, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</td>
